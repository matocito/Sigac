<%= simple_form_for [:administrador, @disciplina, @disciplina_professor] do |f| %>
  <%= f.input :disciplina, :disabled => true %>
  <%= f.association :professor, 
  :collection => Professor.disponiveis_para_disciplina(@disciplina),  
  :prompt => 'Selecione um Professor' %>
  
  <%= f.input :bimestre, :as => :check_boxes, :collection => 1..4 %>
<% end -%>

