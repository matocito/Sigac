<table class="table table-striped table-bordered">
  <thead>
    <th>#</th>
    <% @turma.dias_aulas.each do |dia_aula| -%>
      <th><%= dia_aula %></th>
    <% end -%>
  </thead>
  
  <tbody>
    <% @turma.horas_aulas.each do |intervalo, dias| %>
    <tr>
      <td><%= intervalo %></td>
      <% dias.each do |dia_hora| -%>
        <td>
          <%= simple_form_for [:administrador, dia_hora.horario] do |f| %>
            <%= f.association :disciplina_professor, :label => false %>
            <%= f.button :submit %>
          <% end -%>
        </td>
      <% end -%>
    </tr>
    <% end -%>
  </tbody>
</table>
