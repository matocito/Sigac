<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name),
:html => { :class => 'form-horizontal' }) do |f| %>
  <div class="conteudo">
    <h2>Efetuar Login</h2><br />
    <div class="inputs">
      <%= f.input :email, :required => false, :autofocus => true %>
      <%= f.input :password, :label => 'Senha', :required => false %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Entrar", :class => 'btn-primary' %>
      <%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
        <%= link_to "Esqueceu sua senha?", new_password_path(resource_name) %><br />
      <% end -%>
    </div>
  </div>
<% end %>
