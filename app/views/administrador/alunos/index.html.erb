<div class="page-header">
  <h2>Alunos - <%= link_to 'Adicionar Aluno', 
    new_administrador_aluno_path, :class => 'btn' %></h2>
</div>

<table class="table table-striped table-bordered" id="sortTable">
  <thead>
    <tr>
      <th>#</th>
      <th>Nome</th>
      <th>Responsável</th>
      <th>Turma</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @alunos.each do |aluno| -%>
      <tr>
        <td><%= aluno.id %></td>
        <td><strong><%= link_to aluno.nome, [:administrador, aluno] %></strong></td>
        <td><%= aluno.responsavel %></td>
        <td><%= aluno.turma.nome if aluno.turma %></td>
        <td>
          <%= link_to 'Editar', edit_administrador_aluno_path(aluno),
            :class => 'btn btn-mini' %>
          <%= link_to 'Deletar', administrador_aluno_path(aluno), :method => :delete,
            :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end -%>
  </tbody>
</table>
